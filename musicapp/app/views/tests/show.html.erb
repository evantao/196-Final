<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @test.name %>
</p>

<p>
  <strong>Albums:</strong>

  <% if @test.albums.empty? %>
  <p> No albums here yet! </p> 
  <% else %>
  <table>
    <thead>
      <tr>
	<th>Name</th>
	<th>Artist</th>
	<th colspan="3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @test.albums.each do |album| %>
      <tr>
	<td> <%= album.name %> </td>
	<td> <%= album.artist %> </td>
	<td> <img src= <%= album.spotify_uri %> style="width:100px;height:100px;"></td>
	<% if logged_in? && current_user.id == @test.user_id %>
	<td> <%= link_to 'Remove Album', test_delete_album_path(@test, album), method: :delete, data: {confirm: 'Are you sure?' } %> </td> 
	<% end %>
      </tr>
      <% end %>
</p>
</tbody>
</table>
<% end %>

<br>
<%= link_to 'All Tests', tests_path %>
